<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Inicio fondo-->

    <ImageView
        android:id="@+id/ivFondoImagen"
        android:layout_width="740dp"
        android:layout_height="460dp"
        android:contentDescription="@string/imagen_fondo"
        android:scaleType="centerCrop"
        android:translationY="-25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fondo1" />


    <View
        android:id="@+id/vFondoColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/degradado_mascara" />

    <!--Fin fondo-->

    <ImageView
        android:id="@+id/imagen_logo"
        android:layout_width="150dp"
        android:layout_height="107dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/imagen_fondo"
        app:layout_constraintBottom_toTopOf="@+id/imagen_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2" />

    <ImageView
        android:id="@+id/imagen_product"
        android:layout_width="235dp"
        android:layout_height="232dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circle_shape"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/title-product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title-product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/alata"
        android:text="Jab칩n s칩lido Karite Leche"
        android:textColor="@color/verde"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/price-product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/price-product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/alata"
        android:text="$24.000"
        android:textColor="@color/verde"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/item-product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item-product"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/alata"
        android:text="Descripci칩n"
        android:textColor="@color/verde"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        tools:layout_editor_absoluteX="81dp" />

    <View
        android:id="@+id/line-product"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="@color/verde"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="590dp" />

    <TextView
        android:id="@+id/icon-more-product"
        android:layout_width="11dp"
        android:layout_height="34dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/alata"
        android:text="+"
        android:textColor="@color/verde"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/line-product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/item-product" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/alata"
        android:text="Ingredientes"
        android:textColor="@color/verde"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/line-product"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/alata"
        android:text="+"
        android:textColor="@color/verde"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/line-product"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_marginBottom="84dp"
        android:background="@color/verde"
        app:layout_constraintBottom_toTopOf="@+id/bt_inicio_sesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_inicio_sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/verde"
        android:fontFamily="@font/alata"
        android:text="A침adir al carrito"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line-product"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>