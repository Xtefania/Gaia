<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragmento del mapa -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Dirección con clic para hacer zoom -->
    <TextView
        android:id="@+id/text_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carrera 15 #124-30, Piso 1 - Local 25\nCentro Comercial Unicentro\nBogotá, Colombia"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="#f0f0f0"
        android:textColor="#000000" />

    <!-- Horarios -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horarios:\nLunes a Sábado: 10:00 a.m. a 8:00 p.m. |\nDomingos y Festivos 11:00 a.m. a 7:00 p.m."
        android:padding="8dp"
        android:background="#f0f0f0"
        android:textSize="16sp" />

    <!-- Contacto -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacto: +57 300757575"
        android:padding="8dp"
        android:background="#f0f0f0"
        android:textSize="16sp" />
</LinearLayout>
