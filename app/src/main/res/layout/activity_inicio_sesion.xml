<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivFondoImagen"
        android:layout_width="740dp"
        android:layout_height="460dp"
        android:contentDescription="@string/imagen_fondo"
        android:scaleType="centerCrop"
        android:translationY="-25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fondo1" />

    <!--Fin fondo-->

    <View
        android:id="@+id/vFondoColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/degradado_mascara"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/form_background"
        android:layout_width="338dp"
        android:layout_height="416dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/form_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/alata"
        android:text="@string/bienvenido"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/form_background"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/form_background"
        app:layout_constraintTop_toTopOf="@+id/form_background" />


    <!--   reeeeeeeeevisar!!!     -->


    <EditText
        android:id="@+id/campo_correo"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/alata"
        android:hint="@string/correo_electronico"
        android:inputType="textEmailAddress"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/form_background"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/form_background"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome" />

    <EditText
        android:id="@+id/campo_contrasena"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/green"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="@string/contrasena"
        android:inputType="textPassword"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/form_background"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/form_background"
        app:layout_constraintTop_toBottomOf="@+id/campo_correo" />

    <ImageView
        android:id="@+id/imagen_logo"
        android:layout_width="200dp"
        android:layout_height="107dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/imagen_fondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2" />

    <Button
        android:id="@+id/btn_inicio_sesion"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/alata"
        android:text="@string/iniciar_sesion"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/form_background"
        app:layout_constraintStart_toStartOf="@+id/form_background"
        app:layout_constraintTop_toBottomOf="@+id/tv_contrasena_olv" />

    <TextView
        android:id="@+id/tv_contrasena_olv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/alata"
        android:text="@string/contrasena_olvidada"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/form_background"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toStartOf="@+id/form_background"
        app:layout_constraintTop_toBottomOf="@+id/campo_contrasena" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_google"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/alata"
        android:text="@string/continuar_google"
        android:textColor="@color/green"
        android:textSize="14sp"
        app:icon="@drawable/logogoogle"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/form_background"
        app:layout_constraintStart_toStartOf="@+id/form_background"
        app:layout_constraintTop_toBottomOf="@+id/btn_inicio_sesion"
        app:strokeColor="@color/green"
        app:strokeWidth="2dp" />


    <TextView
        android:id="@+id/tv_registrese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alata"
        android:text="@string/registrate"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/form_background"
        app:layout_constraintStart_toStartOf="@+id/form_background"
        app:layout_constraintTop_toBottomOf="@+id/bt_google" />


</androidx.constraintlayout.widget.ConstraintLayout>